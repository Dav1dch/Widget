<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background_day_progress"
    android:gravity="center"
    android:padding="16dp">

    <!-- 日期和星期 -->
    <TextView
        android:id="@+id/text_date_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_progress_date_weekday"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        tools:text="周三 01/15" />

    <!-- 当前时间 -->
    <TextView
        android:id="@+id/text_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/day_progress_current_time"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        tools:text="14:30" />

    <!-- 进度条容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 进度条 -->
        <ProgressBar
            android:id="@+id/view_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:progressDrawable="@drawable/progress_bar_layer"
            android:max="100"
            android:progress="60" />

        <!-- 进度百分比 -->
        <TextView
            android:id="@+id/text_progress_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/day_progress_percentage"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            tools:text="60%" />
    </LinearLayout>

    <!-- 已用时间 -->
    <TextView
        android:id="@+id/text_passed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/day_progress_passed_time"
        android:textSize="12sp"
        android:textColor="@color/widget_text_secondary"
        android:gravity="center"
        tools:text="已用 9.5小时" />

</LinearLayout>
